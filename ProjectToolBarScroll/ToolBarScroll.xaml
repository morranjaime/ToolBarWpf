<ToolBar x:Class="ProjectToolBarScroll.ToolBarScroll"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectToolBarScroll"
         
             mc:Ignorable="d" 
             Height="25" Loaded="ToolBar_Loaded" >
    
    <StackPanel Orientation="Horizontal" Margin="2,0,5,0" >
                <Button x:Name="bt_Left" Tag="{x:Static local:Images.Left}" Style="{StaticResource ButtonToolBar}" Click="bt_Left_Click" />
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" x:Name="Items"/>

            <StackPanel Orientation="Horizontal" Margin="5,0,2,0">
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                <Button x:Name="bt_Right" Click="bt_Right_Click" Tag="{x:Static local:Images.Right}" Style="{StaticResource ButtonToolBar}" />
            </StackPanel>
    </ToolBar>
